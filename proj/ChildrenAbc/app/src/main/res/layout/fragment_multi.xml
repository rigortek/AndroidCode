<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.multi.MultiFragment">

    <ImageView
        android:id="@+id/cur_image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/cur_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/cur_image_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/cur_image_1"
        app:layout_constraintTop_toBottomOf="@id/cur_image_1"></ImageView>

    <ImageView
        android:id="@+id/cur_image_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@id/cur_image_2"
        app:layout_constraintTop_toBottomOf="@id/cur_image_2"></ImageView>

    <ImageView
        android:id="@+id/cur_image_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/cur_image_1"
        app:layout_constraintTop_toBottomOf="@id/cur_image_3"></ImageView>

    <ImageView
        android:id="@+id/cur_image_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@id/cur_image_2"
        app:layout_constraintTop_toBottomOf="@id/cur_image_4"></ImageView>

    <RadioGroup
        android:id="@+id/right_or_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent" >

        <RadioButton
            android:id="@+id/check_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错误"
            android:textSize="40sp"/>

        <RadioButton
            android:id="@+id/check_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="正确"
            android:textSize="40sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>